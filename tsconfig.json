{
	"include": ["src"],
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"strict": true,
		"noUncheckedIndexedAccess": true,
	},
	"exclude": ["src/**/*.test.ts"]
}
